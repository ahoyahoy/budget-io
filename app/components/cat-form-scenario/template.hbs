{{#paper-form onSubmit=(action "submit") as |form|}}
  {{#paper-dialog-content}}
    {{form.input
      label="Title"
      value=item.title
      onChange=(action (mut item.title))
      required=true
      block=true
    }}

    {{cat-select
      value=scenario
      items=options
      parent="#cat-dialog-container"
      origin=(concat '#' element.id)
      noneItemEnabled=true
      update=(action (mut item.scenario) value="id")
    }}

  {{/paper-dialog-content}}

  {{#paper-dialog-actions class="layout-row"}}
    <span class="flex"></span>
    {{#paper-button onClick=(action "cancel")}}Cancel{{/paper-button}}
    {{#form.submit-button raised=true primary=true disabled=form.isInvalid}}OK{{/form.submit-button}}
  {{/paper-dialog-actions}}
{{/paper-form}}
